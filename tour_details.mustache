<!doctype html>
<html lang="en">
  {{> head}}
  <body>
    {{> header}}

    <main role="main">
        <div class="container py-5">
            <div class="post">
                <h1 class="post-title">
                    {{name}}
                </h1>
                <div class="row">
                {{#images}}
                    <div class="col-md-4">
                        <div class="thumbnail">
                            <img src="{{image_source}}" alt="Lights" style="width:100%">
                        </div>
                    </div>
                {{/images}}
                </div>

                <small class="text-muted">Duration: {{duration}}</small>
                <br>
                <small class="text-muted">Location: {{location}}</small>
                <br>
                <small class="text-muted">Accessibility: {{accessibility}}</small>
                <br>
                <small class="text-muted">Notes: {{notes}}</small>
                <br><br>
                <p><b>{{description}}</b></p>
                <p>{{text}}</p>
            </div>
        </div>
    </main>

    {{> footer}}

  </body>
</html>
