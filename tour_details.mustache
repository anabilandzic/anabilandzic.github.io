<!doctype html>
<html lang="en">
  {{> head}}
  <body>
    {{> header}}

    <main role="main">
        <div class="container py-5">
            <div class="post">
                <h1 class="post-title text-center">
                    {{name}}
                </h1>

                <i class="text-muted">Duration: {{duration}}</i>
                <br>
                <i class="text-muted">Location: {{location}}</i>
                <br>
                <i class="text-muted">Accessibility: {{accessibility}}</i>
                <br>
                <i class="text-muted">Notes: {{notes}}</i>
                <br><br>
                <p><b>{{description}}</b></p>
                <p>{{{text}}}</p>

                <div class="card-columns">
                {{#images}}
                    <div class="pt-1 pb-1">
                        <div class="thumbnail">
                            <img src="{{image_source}}" style="width:100%">
                        </div>
                    </div>
                {{/images}}
                </div>
            </div>
        </div>
    </main>

    {{> footer}}

  </body>
</html>
